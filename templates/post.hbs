<!DOCTYPE html>
<html lang="en">
    {{~#> html_head title=post.title, description=post.summary }}
        {{~#unless post.featured }}
            {{~#if let Some(series) = &post.series }}
                {{~#if series.prev_is_part }}
        <link rel="prev" href="/{{{ post.prev_path.as_ref().unwrap() }}}" />
                {{~/if }}
                {{~#if series.next_is_part }}
        <link rel="next" href="/{{{ post.next_path.as_ref().unwrap() }}}" />
                {{~/if }}
            {{~/if }}
        {{~/unless }}
        {{~> html_head_facebook }}
        {{~> json_ld ~}}
        <script src="/js/post.js" type="text/javascript" defer></script>
    {{~/html_head }}
<body>
    {{#> header title=title, sub_title=sub_title }}
        {{~#if let Some(series) = &post.series }}
            <div class="subtitle">
                <div class="parts"><span>Part </span>{{ series.part }} of {{ series.total_parts }}:</div>
                <p>{{ sub_title }}</p>
            </div>
        {{~/if }}
        {{~#if let Some(d) = post.happened_on }}
            <div id="post-date">{{ ctx.date(d) }}</div>
        {{~/if }}
    {{~/header }}

    <div class="synopsis content">
        <p>{{ post.summary }}</p>
    </div>

    <div class="post content">
    {{~#unless post.featured }}
        {{~> categories post }}
    {{/unless }}
        <nav id="nav-top">
            {{~> navigation ~}}
        </nav>
    </div>

    <div id="light-box"><img src="/img/topo-map-tile.jpg" /></div>

    {{~#each post.photos.as_slice() }}

    <figure itemscope title="Click to enlarge image {{ index }}" data-exif="/exif/{{ index }}"
        style="width: {{ size.medium.width }}px; height: {{ size.medium.height }}px;">
        <a name="{{ index }}"></a>
        {{! data-src attribute supports lazyload !}}
        <img src="/{{{ size.small.url }}}"
            {{~#if let Some(text) = &title }} alt="{{ text }}" {{/if ~}}
            style="width: {{ size.medium.width }}px; height: {{ size.medium.height }}px;" data-src="/{{{ size.medium.url }}}"
            data-big="/{{{ size.large.url }}}" data-big-width="{{ size.large.width }}" data-big-height="{{ size.large.height }}" />
        <div class="info-button">{{{ super::ctx.icon("photo_camera") }}}
            <p>Camera Settings</p>
        </div>

        {{~#if !tags.is_empty() }}
        <nav class="tags">
            {{{ super::ctx.icon("local_offer") }}}
            <h4>More photos like this</h4>
            {{{ super::ctx.tag_list(&tags) }}}
        </nav>
        {{~/if }}

        {{~#if location.is_some() }}
        <a class="map" title="View on map" href="/{{ super::post.path }}/map/{{ index }}"
            rel="nofollow"><span>map</span>{{{ super::ctx.icon("map") }}}</a>
        {{~/if }}

        {{~#if let Some(text) = &title }}
        <figcaption><span>{{{ text }}}</span></figcaption>
        {{~/if }}
    </figure>

    <div class="caption content">
        {{~#if let Some(text) = &caption }}{{{ text }}}{{~/if ~}}
    </div>

    {{~/each}}

    <nav id="nav-bottom">
        {{> navigation }}
    </nav>

    <div class="by-line content{{#if post.featured }} feature{{/if }}">
        <p rel="author">by {{ ctx.author_name }}</p>
    </div>

    {{#unless post.featured ~}}
    <div class="footer-tags content">{{> categories post }}</div>
    {{/unless }}

    <footer class="post content">
        <div class="fb-comments" data-href="{{{ ctx.site_url }}}/{{{ post.path }}}/" data-width="648" data-num-posts="20"></div>
    </footer>

    {{> footer }}
</body>
</html>