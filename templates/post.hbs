<!DOCTYPE html>
<html lang="en">
{{~#> head title=post.title, description=post.summary }}
    {{~#unless post.featured }}
        {{~#if post.prev_is_part }}
    <link rel="prev" href="/{{{ post.prev_path }}}" />
        {{~/if }}
        {{~#if post.next_is_part }}
    <link rel="prev" href="/{{{ post.next_path }}}" />
        {{~/if }}
    {{~/unless }}
    {{~> head_facebook }}
    <script src="/js/post.js" type="text/javascript" defer></script>
{{~/head }}
<body>
    <header class="page content">
        <!--googleoff: index-->
        <nav id="mobile-menu"></nav>
        <!--googleon: index-->
        <div id="top-bar">
            <h1>{{ post.title }}</h1>
        {{~#if !post.sub_title.is_empty() && !post.is_partial }}
            <h4>{{ post.sub_title }}</h4>
        {{~/if }}
            <div id="mobile-menu-button">{{{ html.icon("menu") }}}</div>
        {{~#if post.is_partial }}
            <div class="subtitle">
                <div class="parts"><span>Part </span>{{ post.part }} of {{ post.total_parts }}:</div>
                <p>{{ post.sub_title }}</p>
            </div>
        {{~/if }}
        {{~#if let Some(d) = post.happened_on }}
            <div id="post-date">{{ d.to_rfc3339() }}</div>
        {{~/if }}
        </div>
    </header>

    {{> side_menu }}

    {{~#if !post.summary.is_empty() }}
    <div class="synopsis content">
        <p>{{ post.summary }}</p>
    </div>
    {{~/if}}

    <div class="post content">
    {{~#unless post.featured }}
        {{~> categories post }}
    {{/unless }}
        <nav id="nav-top">
            {{~> navigation ~}}
        </nav>
    </div>

    <div id="light-box"><img src="/img/topo-map-tile.jpg" /></div>

    {{~#each post.photos.as_slice() }}

    <figure itemscope title="Click to enlarge image {{ name }}" data-exif="/exif/{{ name }}"
        style="width: {{!size.normal.width!}}px; height: {{!size.normal.height!}}px;">
        <a name="{{ name }}"></a>
        {{! data-src attribute supports lazyload !}}
        <img src="{{!size.preview.url!}}" alt="{{! title !}}"
            style="width: {{!size.normal.width!}}px; height: {{!size.normal.height!}}px;" data-src="{{!size.normal.url!}}"
            data-big="{{!size.big.url!}}" data-big-width="{{!size.big.width!}}" data-big-height="{{!size.big.height!}}" />
        <div class="info-button">{{{ super::html.icon("photo_camera") }}}
            <p>Camera Settings</p>
        </div>

        {{~#if !tags.is_empty() }}
        <nav class="tags">
            {{{ super::html.icon("local_offer") }}}
            <h4>More photos like this</h4>
            {{!makeTagList tags!}}
        </nav>
        {{~/if }}

        {{~#if location.is_some() }}
        <a class="map" title="View on map" href="/{{ super::post.path }}/map/{{ name }}"
            rel="nofollow"><span>map</span>{{{ super::html.icon("map") }}}</a>
        {{~/if }}

        {{~#if let Some(text) = &title }}
        <figcaption><span>{{{ text }}}</span></figcaption>
        {{~/if }}
    </figure>

    <div class="caption content">
        {{~#if let Some(text) = &caption }}{{{ text }}}{{~/if ~}}
    </div>

    {{~/each}}

    <nav id="nav-bottom">
        {{> navigation }}
    </nav>

    <div class="by-line content{{#if post.featured }} feature{{/if }}">
        <p rel="author">by {{ config.author_name }}</p>
    </div>

    {{#unless post.featured ~}}
    <div class="footer-tags content">{{> categories post }}</div>
    {{/unless }}

    <footer class="post content">
        <div class="fb-comments" data-href="{{{ config.site_url }}}/{{{ post.path }}}/" data-width="648" data-num-posts="20"></div>
    </footer>

    {{> footer }}
</body>
</html>