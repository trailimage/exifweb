<p>Adventure Categories</p>
{{~#each blog.categories }}
<select class="category-selector">
    <option class="label">{{ this.0.to_string() }}</option>
    {{~#each this.1 }}
    <option value="/{{{ this.slug }}}">{{ this.name }} ({{ this.post_paths.len() }})</option>
    {{~/each}}
</select>
{{~/each }}