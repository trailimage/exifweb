<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{{ config.site.url }}}/</loc>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    <url>
        <loc>{{{ config.site.url }}}/about</loc>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>
    {{#each blog.posts }}
    <url>
        <loc>{{{ super::config.site.url }}}/{{{ this.1.path }}}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {{/each }}
    {{#each blog.categories }}
    <url>
        <loc>{{{ super::config.site.url }}}/{{ this.name }}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>
    {{/each}}
    {{#each blog.tags }}
    <url>
        <loc>{{{ super::config.site.url }}}/photo-tag/{{ this.0 }}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.2</priority>
    </url>
    {{/each}}
</urlset>