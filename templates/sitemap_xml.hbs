<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{{ ctx.site_url }}}/</loc>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    <url>
        <loc>{{{ ctx.site_url }}}/about</loc>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>
    {{#each ctx.blog.posts }}
    <url>
        <loc>{{{ super::ctx.site_url }}}/{{{ this.1.path }}}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {{/each }}
    {{#each ctx.categories }}
        {{#each this.1 }}
    <url>
        <loc>{{{ super::super::ctx.site_url }}}/{{ this.name }}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>
        {{/each }}
    {{/each }}
    {{#each ctx.blog.tags }}
    <url>
        <loc>{{{ super::ctx.site_url }}}/photo-tag/{{ this.0 }}</loc>
        <changefreq>monthly</changefreq>
        <priority>0.2</priority>
    </url>
    {{/each}}
</urlset>